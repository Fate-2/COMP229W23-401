<div class="container">
    <h1><%=title %></h1>
    <a href="/contact-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add Business Contact
    </a>
    <div class="row">
        <div class="column">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Contact Name</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">Contact Email</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody id="contactList">
                    <% for(let count=0; count < contacts.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"></th>
                            <th><%= contacts[count].name %></th>
                            <th><%= contacts[count].contactnum %></th>
                            <th><%= contacts[count].email %></th>
                            <td class="text-center col-1">
                                <a class="btn btn-primary" href="/contact-edit/<%= contacts[count].id %>">
                                    Edit
                                </a>
                            </td>
                            <td class="text-center col-1">
                                <a class="btn btn-warning" href="/contact-delete/<%= contacts[count].id %>">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>