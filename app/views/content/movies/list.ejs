<div class="container">
    <h1><%=title %></h1>
    <a href="/movie-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a Movie
    </a>
    <div class="row">
        <div class="column">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Year</th>
                    <th scope="col">Director</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Runtime</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody id="movieList">
                    <% for(let count=0; count < movies.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"></th>
                            <th><%= movies[count].name %></th>
                            <th><%= movies[count].year %></th>
                            <th><%= movies[count].director %></th>
                            <th><%= movies[count].genre %></th>
                            <th><%= movies[count].runtime %></th>
                            <th></th>
                            <th></th>
                        </tr>
                     <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>